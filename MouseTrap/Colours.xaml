	<SolidColorBrush x:Key="ListSelected.Background" Color="#FF0078D7"/>
	<SolidColorBrush x:Key="ListTextColour" Color="White"/>

	<SolidColorBrush x:Key="MenuButton.Default.BorderBrush" Color="#FF0078D7"/>
